<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
	<widget id="sy_slider_widget" class="SY\Slider\Block\Widget" placeholder_image="SY_Slider::images/widget.png">
		<label translate="true">Slider</label>
		<description></description>
		<parameters>
			<parameter name="ids" xsi:type="block" visible="true" required="false" sort_order="1">
				<label translate="true">Ids</label>
				<block class="SY\Slider\Block\Adminhtml\Widget\Chooser">
					<data>
						<item name="button" xsi:type="array">
							<item name="open" xsi:type="string" translate="true">Select</item>
						</item>
					</data>
				</block>
			</parameter>
		</parameters>
	</widget>
</widgets>